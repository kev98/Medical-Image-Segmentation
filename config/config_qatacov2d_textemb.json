{
    "name": "QaTaCOV_textemb",
    "n_gpu": 1,

    "dataset": {
        "name": "QaTaCovTextEmb",
        "path": "/leonardo_work/IscrC_narc2/reports_project/QaTa-COV19/QaTa-COV19-v2_preprocessed_gt",
        "split_file": "/leonardo_work/IscrC_narc2/reports_project/QaTa-COV19/QaTa-COV19-v2_preprocessed_gt/qatacov_split.xlsx",
        "text_emb_dir": "/leonardo_work/IscrC_narc2/reports_project/QaTa-COV19/Text_Embeddings/BioBERT",
        "batch_size": 32,
        "image_size": [224, 224],
        "transforms": "config/qatacov2d_transforms.json"
    },
    "classes": {
        "0": "Background",
        "1": "Covid"
    },
    "model": {
        "name": "UNet2D",
        "in_channels": 1,
        "num_classes": 2,
        "size": 32,
        "depth": 5
    },
    "loss": {
        "name": "DiceCELoss",
        "softmax": true,
        "include_background": true
    },
    "optimizer": {
        "name": "SGD",
        "lr": 0.01,
        "momentum": 0.99,
        "weight_decay": 0.00003,
        "nesterov": true
    },
    "scheduler": {
        "name": "PolynomialLR",
        "total_iters": 22329,
        "power": 0.9
    },
    "metrics": [
        {
            "key": "DSC",
            "name": "DiceMetric",
            "params": { "include_background": false},
            "train": true,
            "val": true,
            "test": true
        },
        {
            "key": "HD95",
            "name": "HausdorffDistanceMetric",
            "params": { "percentile": 95, "include_background": false},
            "train": false,
            "val": true,
            "test": true
        }
    ]
}
