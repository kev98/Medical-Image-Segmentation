{
    "name": "BraTS3D_depth4_SGD",
    "n_gpu": 4,

    "dataset": {
        "name": "BraTS3D",
        "path": "/leonardo_work/IscrC_narc2/reports_project/BRATS2023_Training_nifti",
        "patch_size": 128,
    
        "grid_overlap": 0,
        "queue_length": 100,
        "samples_per_volume": 2,
        "batch_size": 16,
        "split_file": "/leonardo/home/userexternal/kmarches/Report-Guided-Segmentation/split_files/BraTS23_reports.json",
        "transforms": "/leonardo/home/userexternal/kmarches/Report-Guided-Segmentation/config/brats3d_transforms.json"
    },
    "classes": {
        "0": "Background",
        "1": "Necrosi",
        "2": "Edema",
        "3": "Enhancing Tumor"
    },
    "aggregated_regions": {
        "ET": [3],
        "TC": [1, 3],
        "WT": [1, 2, 3]
    },
    "model": {
        "name": "UNet3D",
        "in_channels": 4,
        "num_classes": 4,
        "size": 32,
        "depth": 4
    },
    "loss": {
        "name": "DiceFocalLoss",
        "include_background": false,
        "softmax": true
    },
    "optimizer": {
        "name": "SGD",
        "lr": 0.01,
        "momentum": 0.99,
        "weight_decay": 0.00003,
        "nesterov": true
    },
    "scheduler": {
        "name": "PolynomialLR",
        "total_iters": 22000,
        "power": 0.9
    },
    "metrics": [
        {
            "key": "DSC",
            "name": "DiceMetric",
            "params": { "include_background": false },
            "train": true,
            "val": true,
            "test": true
        },
        {
            "key": "HD95",
            "name": "HausdorffDistanceMetric",
            "params": {"percentile": 95},
            "train": false,
            "val": true,
            "test": true
        }
    ]
}
